
class MultipleException {
    public static void main(String[] args) {
        try{
            //ex1 ArthmaticException
            int res=10/0;
            //ex2 ArrayIndexOutOfBoundsException
            int[]num={1,2,3};
            int n=num[5];
            //ex3 NumberFormatException
            int val=Integer.parseInt("abc");//invalid integer
        }catch(ArithmeticException e){
            System.out.println("Arithmetic Exception: "+e.getMessage());
        }
        catch(ArrayIndexOutOfBoundsException e){
            System.out.println("Array Index Out Of Bounds: "+e.getMessage());
        }
        catch(NumberFormatException e){
            System.out.println("Number Format Error: "+e.getMessage());
        }
        catch(Exception e){
            //Catches any other exception not handled above
            System.out.println("General Exception: "+e.getMessage());
        }
        finally{
            System.out.println("This block always runs (cleanup code).");
        }
        System.out.println("Program continues after exception handling...");
    }
}
